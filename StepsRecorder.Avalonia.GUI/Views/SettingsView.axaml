<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:markupExtensions="clr-namespace:StepsRecorder.Avalonia.GUI.MarkupExtensions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StepsRecorder.Avalonia.GUI.Views.SettingsView">
    <HeaderedContentControl Header="Settings"
                            FontSize="12"
                            Padding="10,5"
                            DataContext="{Binding SettingViewModel}">
        <StackPanel Orientation="Horizontal">
            <CheckBox Content="Clicks"></CheckBox>
            <CheckBox Content="Scrolling"></CheckBox>
        </StackPanel>
    </HeaderedContentControl>
</UserControl>